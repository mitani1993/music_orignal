<div class=" card-wrap d-flex justify-content-center">
  <div class="card text-center" style="width: 40rem;">
    <% if @user.image.blank? %>
      <%= image_tag 'no_image.png', class: "bd-placeholder-img card-img-top" %>
    <% else %>
      <%= image_tag @user.image, class: "bd-placeholder-img card-img-top" %>
    <% end %>
    <div class="card-body">
      <h1 class="card-title">
        <%= @user.name %>
      </h1>
      <hr>
      <p class="card-text">
        <div class="show-name">
          <%= @user.profession.name %>
        </div>
        <div class="show-name">
          <%= @user.area.name %>
        </div>
        <div class="show-name">
          <%= @user.profile %>
        </div>
        <div class="show-name">
          <%= @user.youtube %>
        </div>
      </p>
      
      <% if @user == current_user %>
        <%= link_to "編集", edit_user_registration_path(@user) %>
      <% end %>
    </div>
  </div>
</div>