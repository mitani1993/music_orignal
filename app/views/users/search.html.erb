<div class="main-edit">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <p class="text-secondary">ユーザーを検索しよう！</p>
      </div>
      <%= search_form_for @p, url: result_users_path do |f| %>
        <div class="form-group">
          <%= f.label 'ユーザー名' %>
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label '活動地域' %><br>
          <%= f.collection_select(:area_id_eq, Area.where.not(id: 1), :id, :name, include_blank: '指定なし') %>
        </div>
        <div class="form-group">
          <%= f.label '属性' %><br>
          <%= f.collection_select(:profession_id_eq, Profession.where.not(id: 1), :id, :name, include_blank: '指定なし') %>
        </div>
        <div class="form-group">
          <%= f.label '自己紹介' %><br>
          <%= f.check_box :profile_present,{} , true, false %>
          あり
        </div>
        <div class="form-group">
          <%= f.label "YouTube URL" %><br>
          <%= f.check_box :youtube_present,{} , true, false %>
          あり
        </div>
        <div class="actions">
          <%= f.submit '検索', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>