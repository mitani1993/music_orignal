<% if user_signed_in? %>
  <%= "#{current_user.name}さんこんにちは" %>
<% end %>

<div class="card-index">
  <div class="card-deck">
    <% @users.each do |user| %>
      <%= link_to user_path(user) do %>
        <div class="card">
          <%= image_tag user.image, class: "bd-placeholder-img card-img-top" %>
          <div class="card-body text-center">
            <%= user.name %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>