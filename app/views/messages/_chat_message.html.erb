<div class="chat-message">
  <% if chat_message.user.id != current_user.id %>
    <div class="chat-message__partner">
      <% if @chat_room_user.image.blank? %>
        <%= image_tag 'no_image.png', class: "chat-message__partner-img" %>
      <% else %>
        <%= image_tag chat_message.user.image, class: "chat-message__partner-img" %>
      <% end %>

      <div class="chat-message__content">
        <%= chat_message.message %>
      </div>
    </div>
  <% else %>
    <div class="chat-message__current-user">
      <div class="chat-message__content main-color-bg">
        <%= chat_message.message %>
      </div>
    </div>
  <% end %>
</div>

